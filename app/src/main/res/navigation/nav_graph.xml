<navigation xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    app:startDestination="@id/noteListFragment">

    <!-- Note List Fragment -->
    <fragment
        android:id="@+id/noteListFragment"
        android:name="com.example.noteitapp.ui.fragments.NoteListFragment"
        tools:layout="@layout/fragment_note_list">

        <!-- Action to navigate to Add Note Fragment -->
        <action
            android:id="@+id/action_noteListFragment_to_editNoteFragment"
            app:destination="@id/editNoteFragment" />
        <action
            android:id="@+id/action_noteListFragment_to_addNoteFragment"
            app:destination="@id/addNoteFragment" />
        <action
            android:id="@+id/action_noteListFragment_to_searchFragment"
            app:destination="@id/searchFragment" />
    </fragment>

    <!-- Add Note Fragment -->
    <fragment
        android:id="@+id/addNoteFragment"
        android:name="com.example.noteitapp.ui.fragments.AddNoteFragment"
        tools:layout="@layout/fragment_add_note">

        <!-- Action to navigate back to Note List Fragment -->
        <action
            android:id="@+id/action_addNoteFragment_to_noteListFragment"
            app:destination="@id/noteListFragment"
            app:popUpTo="@id/noteListFragment"
            app:popUpToInclusive="true" />
    </fragment>

    <!-- Edit Note Fragment -->
    <fragment
        android:id="@+id/editNoteFragment"
        android:name="com.example.noteitapp.ui.fragments.EditNoteFragment"
        tools:layout="@layout/fragment_edit_note">
        <argument
            android:name="note"
            app:argType="com.example.noteitapp.data.Note" /> <!-- Ensure this is correct -->

        <!-- Action to navigate back to Note List Fragment -->
        <action
            android:id="@+id/action_editNoteFragment_to_noteListFragment"
            app:destination="@id/noteListFragment"
            app:popUpTo="@id/noteListFragment"
            app:popUpToInclusive="true" />
    </fragment>
    <fragment
        android:id="@+id/searchFragment"
        android:name="com.example.noteitapp.ui.fragments.SearchFragment"
        tools:layout="@layout/fragment_search">
        <action
            android:id="@+id/action_searchFragment_to_editNoteFragment"
            app:destination="@id/editNoteFragment" />
    </fragment>
</navigation>